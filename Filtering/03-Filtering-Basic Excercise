    <script id="candidateCode">
      //function expression

      var getAges = function () {
        var ages = [2, 11, 23, 36, 41, 66, 99, 101, 135, 149];

        return ages;
      };

      var getAdults = function (peopleAges) {
        const newAge = peopleAges.filter(filterAge);

        return newAge;
      };

      var filterAge = function (age) {
        let result = false;

        if (age > 18) {
          return true;
        }
      };

      var getNames = function () {
        var fullNames = [
          "John Smith",
          "Neil Tejada",
          "Kharis Tejada",
          "Carmen Gonzalez",
          "Jessina Colon",
          "Aaron Curatolo",
          "Nick Valez",
          "Mike Fischer",
          "Darryl Garcia",
          "Nicole Brown",
        ];

        return fullNames;
      };

      var searchFirstNames = function (namesAr, nameQuery) {
        var matchedNames = namesAr.filter(function (fullName) {
          var firstName = fullName.split(" ")[0];
          return firstName === nameQuery;
        });

        return matchedNames;
      };
      var matchedNamesArray = searchFirstNames(getNames(), "John");
      console.log(matchedNamesArray);

      var getEmployees = function () {
        var employees = [
          { id: "001", name: "Eli Smith", department: "Sales" },
          { id: "002", name: "Mike Brown", department: "HR" },
          { id: "003", name: "Kevin Jones", department: "Customer Service" },
          { id: "004", name: "Alex Smith", department: "IT" },
          { id: "005", name: "Bob Allen", department: "Collections" },
        ];
        return employees;
      };

      var searchByDepartment = function (employeeAr, department) {
        var filteredEmployees = employeeAr.filter(function (employee) {
          return employee.department === department;
        });

        return filteredEmployees;
      };

      var employees = getEmployees();
      var department = "Sales";

      var result = searchByDepartment(employees, department);
      console.log(result);
    </script>
